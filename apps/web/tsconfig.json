{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "incremental": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}